body
  margin 0
  padding 0
  font-family Arial, Helvetica, sans-serif
  background-color #f2f2f2

.container
  max-width 600px
  margin 20px auto
  background-color #ffffff
  padding 20px
  border-radius 8px
  box-shadow 0 0 10px rgba(0, 0, 0, 0.1)

h1
  color #333333

p
  color #666666

a
  display inline-block
  margin-right 10px

img
  width 50px