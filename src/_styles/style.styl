html
    height: 100%

body
    font-family: Arial, Helvetica, sans-serif
    margin: 0
    display: flex
    flex-direction: column
    min-height: 100%

ul
    margin: 0
    padding: 0

a
    text-decoration: none
    color: black
    cursor: pointer

a:hover
    text-decoration: underline
    color: black

footer
    background: black
    color: white
    margin-top: auto
    padding: 0.8em
    font-size: 0.8em

.navbar
    background: white
    display: flex
    box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2)
    position: fixed
    top: 0
    right: 0
    left: 0

.nav-spacer
    margin: 3.5em

.nav-content
    display: flex
    padding: 1.3em
    font-size: 1.3em
    font-weight: 600

.nav-lang
    margin-left: auto
    font-size: 1.3em
    padding: 1.3em
    font-weight: 600
    text-transform: uppercase

.nav-content > *
    padding-right: 1em

.dropdown > * 
    display: none
    position: absolute
    box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2)
    background-color: white
    list-style-type: none
    padding: 0.5em

.dropdown li
    margin: 0.5em
    text-decoration: none
    
.dropdown:hover > *
    display: block

// Mobile view
@media (max-device-width: 30em)
    html
        font-size: 140%
