body
    font-family: Arial, Helvetica, sans-serif
    margin: 0

ul
    margin: 0
    padding: 0

a
    text-decoration: none
    color: black
    cursor: pointer

a:hover
    text-decoration: underline
    color: black

.navbar
    display: flex
    padding: 1em
    margin-bottom: 0.5em
    border-bottom: 0.15em black solid

.nav-content
    display: flex
    font-size: 1.3em
    font-weight: 600

.nav-lang
    margin-left: auto
    font-size: 1.3em
    font-weight: 600

.nav-content > *
    padding-right: 1em

.dropdown > * 
    display: none
    position: absolute
    box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2)
    background-color: white
    list-style-type: none
    padding: 0.5em

.dropdown li
    margin: 0.5em
    text-decoration: none
    
.dropdown:hover > *
    display: block
