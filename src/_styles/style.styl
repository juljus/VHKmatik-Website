body
    font-family: Arial, Helvetica, sans-serif
    margin: 0

.navbar
    display: flex
    padding: 1em
    margin-bottom: 0.5em
    border-bottom: 0.15em black solid

.nav-content
    display: flex
    font-size: 1.3em
