html
    height: 100%

body
    font-family: Arial, Helvetica, sans-serif
    margin: 0
    display: flex
    flex-direction: column
    min-height: 100%

h1
    text-align: center
    font-size: 2rem

h2
    font-size: 1.5rem

p
    font-size: 1rem

ul
    margin: 0
    padding: 0

a
    text-decoration: none
    color: black
    cursor: pointer

a:hover
    text-decoration: underline
    color: black

footer
    background: black
    color: white
    padding: 0.8rem
    margin-top: auto

.navbar
    background: white
    margin-bottom: 1rem
    display: flex
    padding: 1.3rem
    box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2)
    position: fixed
    top: 0
    right: 0
    left: 0

.nav-spacer
    margin: 3rem

.nav-content
    display: flex
    font-size: 1.3rem
    font-weight: 600

.nav-lang
    margin-left: auto
    font-size: 1.3rem
    font-weight: 600
    text-transform: uppercase

.nav-content > *
    padding-right: 1em

.dropdown > * 
    display: none
    position: absolute
    box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2)
    background-color: white
    list-style-type: none
    padding: 0.5rem

.dropdown li
    margin: 0.5rem
    text-decoration: none
    
.dropdown:hover > *
    display: block

// Mobile view
@media (max-width: 30em)
    .nav-content
        font-size: 2rem
    .nav-lang
        font-size: 2rem
