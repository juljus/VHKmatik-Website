.nav-spacer
    margin: 0

h1
    font-size: 2.5rem;

// Hero section (change background image here)
.hero
    padding: 9em 0 5em 0;
    //margin-bottom: 2rem;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.55)
    ),url("/assets/onejupp/3881.webp");
    background-position: center
    background-size: cover;

.hero-content
    width: 40%;
    padding: 0 3rem 0 3rem;

.desc
    margin-top: 2em;

.photos
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    gap: 2rem
    padding-bottom: 1.5rem

.photos::after
    content: ''
    flex-grow: 999

.photos > li
    height: 300px
    flex: auto
    list-style: none

.photos li img
    border-radius: 25px
    object-fit: cover
    width: 100%
    height: 100%
    vertical-align: middle

.photos li video
    border-radius: 25px
    object-fit: cover
    width: 100%
    height: 100%
    vertical-align: middle

.members
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-evenly
    align-items: baseline
    align-content: space-between
    padding: 1rem 0
    gap: 2rem

.member
    flex: 33%
    max-width: 300px
    min-width: 300px

.member > img
    width: 100%
    height: auto

// Mobile view - portrait
@media (max-device-width: 30em)
    .content
        width: 90%

    .member
        flex: 100%
        max-width: 100%
        min-width: 100%