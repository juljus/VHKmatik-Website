.nav-spacer
    margin: 0

h1
    font-size: 2.5rem;

.hero
    padding: 9em 0 5em 0;
    //margin-bottom: 2rem;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.55)
    ),url("/assets/P2400708.JPG");
    background-position: center
    background-size: cover;

.hero-content
    width: 40%;
    padding: 0 3rem 0 3rem;

.desc
    margin-top: 2em;

.members
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-evenly
    align-items: baseline
    align-content: space-between
    padding-top: 3rem
    gap: 2rem

.member
    flex: 33%
    max-width: 300px
    min-width: 300px

.member img
    width: 100%
    height: auto
    border-radius: 25px

// Mobile view - portrait
@media (max-device-width: 30em)
    .content
        width: 90%

    .member
        flex: 100%
        max-width: 100%
        min-width: 100%