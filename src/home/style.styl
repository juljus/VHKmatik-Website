.main
    width: 65%
    margin: 0 auto

.about-us
    font-size: 1.2rem

.blog-preview
    font-size: 1.2rem

.blog-preview-post
    padding: 0.1rem 1rem 0.5rem 1rem
    box-shadow: 30px 30px 43px #1c1c1c, -30px -30px 43px #323232;
    border-radius: 0.5rem
    font-size: 1rem

.blog-preview-post > h6
    text-align: right

.blog-link
    margin: 1rem 0 3rem 0
    padding: 1rem
    background: rgb(255, 255, 255)
    border-radius: 0.5rem
    display: inline-block
    box-shadow: 30px 30px 43px #1c1c1c, -30px -30px 43px #323232;
    text-decoration: none

.blog-link:hover
    box-shadow: 30px 30px 43px #1c1c1c, -30px -30px 43px #323232;
    text-decoration: none

.blog-link:active
    box-shadow: 30px 30px 43px #1c1c1c, -30px -30px 43px #323232;

// Mobile view - landscape
@media (max-device-width: 63em)
    .main
        width: 75%

// Mobile view - portrait
@media (max-device-width: 30em)
    .main
        width: 85%
